.header-category-list
  - @category.each do |parent| 
    - if parent[:ancestry] == nil
      %ul.parent-wrap
        %li.parent
          %h3.parent-category
            = parent[:name]
          %ul.child-wrap
            - parent.children.each do |child|
              %li.child
                %h3
                  = child[:name]
                %ul.grand-child-wrap
                  - child.children.each do |grandchild|
                    %li.grand-child
                      %h3
                        = grandchild[:name]