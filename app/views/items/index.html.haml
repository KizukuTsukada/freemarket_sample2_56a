%body
  .default-container
  = render partial: 'home/header'

  %main
    %section.owl-carousel.top-carousel
      .owl-stage-outer
        .owl-item.cloned
          =image_tag "mainimage.png", class: 'imagestyle-mein'
    %section.pickup-container
      %h2.pickup-head
        ピックアップカテゴリー
      %section.items-box-container
        %h3.text-center
          =link_to "レディース 新着アイテム", class: 'textstyle'
        .items-box-contenter
          .items-box-content.clearfix
            %section.items-box
              %figure.items-box
          - if @items
            - @items.each do |item|
              = image_tag("#{item.image.url}", width: '213',  height: '213',)
              .items-box-body
                %h3.items-box-name
                  = item.name
                .items-box-num
                  = item.price
          .view-all
            =link_to "全ての商品を見る","",class: 'allitem'
      %section.items-box-container
        %h3.text-center.home
          =link_to " メンズ 新着アイテム", class: 'textstyle'
        .items-box-contenter
          .items-box-content.clearfix
            %section.items-box
              =image_tag "mens.png", class: 'itemstyle'
            %section.items-box
              =image_tag "mens.png", class: 'itemstyle'
            %section.items-box
              =image_tag "mens.png", class: 'itemstyle'
            %section.items-box
              =image_tag "mens.png", class: 'itemstyle'
          .view-all
            =link_to "全ての商品を見る","",class: 'allitem'
    
    = render partial: 'home/footer'