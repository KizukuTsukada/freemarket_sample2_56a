.default-container
  .sp-header.visible-sp.with-shadow
    .sp-header-inner
  .pc-header.visible-pc.with-shadow

  .item-box-container.l-single-container
    %h1.item-name
      アイテム名
    .item-main-content.clearfix
      .item-photo
        .owl-carousel.owl-loaded.owl-drag
          .owl-stage-outer
            .owl-stage{style: "left: 0px; width: 1800px;"}
              .owl-item.active{style: "width: 360px;"}
                .owl-item-inner
                  %img.owl-lazy{alt: "商品名", "data-src" => "/", src: "", :style => "opacity: 1;"}/
              .owl-item{style: "width: 280px;"}
                %img.owl-lazy{:alt => "商品名", "data-src" => "/"}/
          .owl-nav.disabled
            .owl-prev
            .owl-next
          .owl-dots
            .owl-dot.active
              %span
              .owl-dot-inner
                %img{src: ""}/
            .owl-dot
              %span
              .owl-dot-inner
                %img{src: ""}/
            .owl-dot
              %span
              .owl-dot-inner
                %img{src: ""}/
      %table.item-detail-table
        %tbody
          %tr
            %th 出品者
            %td

              = link_to("Smile", {})
              -# のちのちcurrent_user.nameを入れる
          
                %div
                  .item-user-ratings
                    評価アイコン
          %tr
            %th カテゴリー
            %td
              = link_to("メンズ", {})
              -# メンズorレディース一覧のurl入れる
              .item-detail-table-sub-category
                %i.icon-arrow-right
                  = link_to("トップス", {})
                  -# 該当カテゴリー一覧のurl入れる
          %tr
            %th 商品のサイズ
            %td S
          %tr
            %th 商品の状態
            %td 目立った傷や汚れなし
          %tr
            %th 配送料の負担
            %td 送料込み(出品者負担)
          %tr
            %th 配送の方法
            %td 未定
          %tr
            %th 配送元地域
            %td
              福岡県
          %tr
            %th 発送日の目安
            %td 2~3日で発送

    .item-price-box.text-center
      %span.item-price.bold ¥ 5,555
      %span.item-tax (税込)
      %span.item-shipping-fee 送料込み
    = link_to "購入画面に進む", root_path, class: "item-buy-btn f18-24"
