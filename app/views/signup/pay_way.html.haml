%body
  .single-container
    %header.single-header
      %h1
        =link_to root_path do
          =image_tag "header-logo.svg"


      -# ヘッダー左上の進捗管理バー
      %nav.progress-bar
        %ol.clearfix
          %li.done
            会員情報
            %div.progress-status.first
          %li.done
            電話番号認証
            %div.progress-status
          %li.done
            お届け先住所入力
            %div.progress-status
          %li.active
            支払い方法
            %div.progress-status
          %li.last
            完了
            %div.progress-status.last



    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          支払い方法
        .l-single-inner.registration-form1
          .l-single-content

            = form_for @user, url: signup_index_path, method: :post do |f|
              = hidden_field_tag :current_step, 'pay_way'
              = form_tag(pay_credit_index_path, method: :post, id: 'charge-form', name: "inputForm") do
                .each-forms
                  %div
                    %label カード番号
                    %span.form-must 必須
                  = text_field_tag "number", "", class: "text-default", placeholder: "例）1234567890123456", id: "card_number"
                  .card-images
                    = image_tag "visa.svg"
                    = image_tag "master-card.svg"
                    = image_tag "saison-card.svg"
                    = image_tag "jcb.svg"
                    = image_tag "american_express.svg"
                    = image_tag "dinersclub.svg"
                    = image_tag "discover.svg"
                .each-forms
                  %div
                    %label 有効期限
                    %span.form-must 必須
                    %br/
                  .creditcard_wrap
                    .select-form-wrap
                      %select#exp_month.select-default.select-text-default
                        %option{value: ""} ---
                        %option{value: "1"}1
                        %option{value: "2"}2
                        %option{value: "3"}3
                        %option{value: "4"}4
                        %option{value: "5"}5
                        %option{value: "6"}6
                        %option{value: "7"}7
                        %option{value: "8"}8
                        %option{value: "9"}9
                        %option{value: "10"}10
                        %option{value: "11"}11
                        %option{value: "12"}12
                      %span 月
                      %select#exp_year.select-default.select-text-default
                        %option{value: ""} ---
                        %option{value: "2019"}2019
                        %option{value: "2020"}2020
                        %option{value: "2021"}2021
                        %option{value: "2022"}2022
                        %option{value: "2023"}2023
                        %option{value: "2024"}2024
                        %option{value: "2025"}2025
                        %option{value: "2026"}2026
                        %option{value: "2027"}2027
                        %option{value: "2028"}2028
                        %option{value: "2029"}2029
                      %span 年
                .each-forms
                  %div
                    %label セキュリティコード
                    %span.form-must 必須
                  = text_field_tag "cvc", "", class: "text-default", id: "cvc", placeholder: "カードの背面4桁もしくは3桁の番号"
                  %p.security_no_detail
                    = fa_icon 'question-circle', class: 'icon icon-question-circle'
                    %a カードの裏面の番号とは？
                .emptybox-payway
                = submit_tag '次へ進む', url: "credit/show", method: :post, class: 'btn-default btn-red text-default__submit', id: "token_submit"



    %footer.single-footer
      %ul.clearfix
        %li
          = link_to "プライバシーポリシー"
        %li
          = link_to "メルカリ利用規約"
        %li
          = link_to "特定商取引に関する表記"
      = link_to "", class: "single-footer__logo" do
        = image_tag "footer-logo.svg"
      %p
        %small @ 2019 Mercari