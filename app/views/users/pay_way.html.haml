                    %option{value: "10"} 10
                    %option{value: "11"} 11
                    %option{value: "12"} 12
                  %span 月

                -# = f.collection_select (:job_id, @jobs, :id, :birth_month, class: "input-default")
                %i.icon-arrow-bottom
                %select.select-default.creditcard{name: "birth_month", class: "select-text-default"}
                  %option{value: ""} ---
                  %option{value: "1"} 2022
                  %option{value: "2"} 2021
                  %option{value: "3"} 2020
                    
                %span  年

              
              .each-forms
              %div
                -# = form_for [@???] do |f|
