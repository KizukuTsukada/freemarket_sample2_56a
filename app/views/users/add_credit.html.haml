%body
  .default-container
    = render partial: 'home/header'

    %main.l-container.clearfix

      -# マイページ右側
      .l-content
        .l-chapter-container
          .l-chapter-head クレジットカード情報入力
          .mypage-credit-wrapper
            .l-single-content
              .each-forms
                %div
                  -# = form_for [@???] do |f|
                  %label カード番号
                  -# = f.label :card_no, "カード番号"
                  %span.form-must 必須
                %textarea{name: "nickname", class: "text-default", placeholder: "例）メルカリ太郎"}
                -# = f.text_field :card_no, class: "text-default"
                .card-images
                  = image_tag "visa.svg"
                  = image_tag "master-card.svg"
                  = image_tag "saison-card.svg"
                  = image_tag "jcb.svg"
                  = image_tag "american_express.svg"
                  = image_tag "dinersclub.svg"
                  = image_tag "discover.svg"

              .each-forms
                -# = form_for [@???] do |f|
                %label 有効期限
                -# = f.label :birthday, "有効期限"
                %span.form-must 必須
                %br/
                .creditcard_wrap
                  .select-form-wrap
                    -# = f.collection_select (:job_id, @jobs, :id, :birth_year, class: "select-text-default")
                    %i.icon-arrow-bottom
                    %select.select-default.creditcard{name: "birth_year", class: "select-text-default"}
                      %option{value: ""} ---
                      %option{value: "1"} 1
                      %option{value: "2"} 2
                      %option{value: "3"} 3
                      %option{value: "4"} 4
                      %option{value: "5"} 5
                      %option{value: "6"} 6
                      %option{value: "7"} 7
                      %option{value: "8"} 8
                      %option{value: "9"} 9
                      %option{value: "10"} 10
                      %option{value: "11"} 11
                      %option{value: "12"} 12
                    %span 月

                    -# = f.collection_select (:job_id, @jobs, :id, :birth_month, class: "select-text-default")
                    %i.icon-arrow-bottom
                    %select.select-default.creditcard{name: "birth_month", class: "select-text-default"}
                      %option{value: ""} ---
                      %option{value: "1"} 2022
                      %option{value: "2"} 2021
                      %option{value: "3"} 2020
                    %span  年

                
                .each-forms
                %div
                  -# = form_for [@???] do |f|
                  %label セキュリティコード
                  -# = f.label :card_no, "セキュリティコード"
                  %span.form-must 必須
                %textarea{name: "nickname", class: "text-default", placeholder: "カードの背面4桁もしくは3桁の番号"}
                -# = f.text_field :card_no, class: "text-default"

                %p.security_no_detail
                  = fa_icon 'question-circle', class: 'icon'
                  %a カードの裏面の番号とは？
                
                .emptybox-payway
                %button.btn-default.btn-red{:type => "submit", class: "text-default__submit"} 次へ進む
                -# = f.submit '次へ進む', class: 'btn-default btn-red text-default__submit'

      = render partial: 'mypages/leftbox'
    
    = render partial: 'home/footer'